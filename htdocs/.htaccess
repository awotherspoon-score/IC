RewriteEngine On
RewriteRule ^\/?pages\/(.*)\/$ page.php?slug=$1

# Some KERRAZY smart rewrite rules! ARE YOU NOT ENTERTAINED!?!?!?
RewriteRule ^\/?(news|events|gallery)\/(archive|calendar)\/(.*)\/$ $1-archive.php?period=$3
